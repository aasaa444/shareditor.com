{% extends ":favorite:base.html.twig" %}

{% block title %}最热点最热门最优秀的排名最靠前的有关大数据,机器学习,深度学习,数据挖掘,检索技术,人工智能以及创业等微信公众号和订阅号文章{% endblock title %}

{% block inbody %}

    <div class="row" style="margin-right: 0">
        <div class="col-sm-1 col-xs-1"></div>
        <div class="col-sm-10 col-xs-10">
            <div class="row">
                {% for crawl_pages in crawl_pages_array %}
                    <div class="col-sm-4 col-xs-4" style="margin-bottom: 20px;">
                        <div class="table-bordered">
                            <div class="row"
                                 style="margin: 5px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">
                                <div class="col-sm-6 col-xs-6">
                                    <h4>
                                        <a href="{{ path('favorite_sourcelist', {'source':crawl_pages['source']}) }}">
                                            {{ crawl_pages['source'] }}
                                        </a>
                                    </h4>
                                </div>
                                <div class="col-sm-6 col-xs-6 text-right">
                                    <h4>
                                        <a href="{{ path('favorite_sourcelist', {'source':crawl_pages['source']}) }}">
                                            更多
                                        </a>
                                    </h4>
                                </div>
                            </div>
                            <hr width="90%" style="margin-top: -10px;" />
                            {% for key, crawl_page in crawl_pages['data'] if key < 10 %}
                                <div class="row"
                                     style="margin: 10px;margin-left: 15px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">
                                    {% if crawl_page.isTec == 1 %}
                                        <div class="btn btn-info btn-xs">
                                            技术文章
                                        </div>
                                    {% elseif crawl_page.isSoup == 1 %}
                                        <div class="btn btn-info btn-xs">
                                            鸡汤文章
                                        </div>
                                    {% elseif crawl_page.isML == 1 %}
                                        <div class="btn btn-info btn-xs">
                                            机器学习
                                        </div>
                                    {% elseif crawl_page.isMath == 1 %}
                                        <div class="btn btn-info btn-xs">
                                            数学知识
                                        </div>
                                    {% elseif crawl_page.isNews == 1 %}
                                        <div class="btn btn-info btn-xs">
                                            新闻资讯
                                        </div>
                                    {% endif %}
                                    <a href="{{ path('favorite_show', {'pageid':crawl_page.id}) }}" target="_blank">
                                        {{ crawl_page.title }}
                                    </a>
                                </div>

                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-sm-1 col-xs-1"></div>
    </div>

{% endblock inbody %}